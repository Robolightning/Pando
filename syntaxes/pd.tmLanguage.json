{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pando",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#byte_strings"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#char_literals"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#print_statements"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.pando",
      "begin": "#",
      "end": "$",
      "patterns": [
        {
          "name": "punctuation.definition.comment.pando",
          "match": "#"
        }
      ]
    },
    "byte_strings": {
      "begin": "(b)(\")",
      "end": "\"",
      "beginCaptures": {
        "1": {
          "name": "storage.type.pando"
        },
        "2": {
          "name": "string.quoted.double.binary.pando"
        }
      },
      "endCaptures": {
        "0": {
          "name": "string.quoted.double.binary.pando"
        }
      },
      "contentName": "string.quoted.double.binary.pando",
      "patterns": [
        {
          "name": "constant.character.escape.pando",
          "match": "\\\\."
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.pando",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.pando",
          "match": "\\\\."
        }
      ]
    },
    "char_literals": {
      "name": "string.quoted.single.pando",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.pando",
          "match": "\\\\."
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.integer.pando",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.pando",
          "match": "\\b\\d+\\.\\d+\\b"
        }
      ]
    },
    "declarations": {
      "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
      "end": "(?=#|$|\\n)",
      "beginCaptures": {
        "1": {
          "name": "variable.other.readwrite.pando"
        },
        "2": {
          "name": "punctuation.separator.pando"
        }
      },
      "patterns": [
        {
          "include": "#type_specifier"
        },
        {
          "include": "#assignment"
        }
      ]
    },
    "type_specifier": {
      "patterns": [
        {
          "name": "support.type.pando",
          "match": "\\b(int(8|16|32|64|128|_size)?|uint(8|16|32|64|128|_size)|float|double|bool|char|str|string|bytes|bytearray)\\b"
        },
        {
          "name": "storage.type.pando",
          "match": "\\bNone\\b"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "assignment": {
      "begin": "=",
      "end": "(?=#|$|\\n)",
      "beginCaptures": {
        "0": {
          "name": "keyword.operator.assignment.pando"
        }
      },
      "patterns": [
        {
          "include": "#literals"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#byte_strings"
        },
        {
          "include": "#char_literals"
        },
        {
          "include": "#constants"
        }
      ]
    },
    "print_statements": {
      "begin": "\\b(print)\\s*(\\()",
      "end": "\\)",
      "beginCaptures": {
        "1": {
          "name": "support.function.builtin.pando"
        },
        "2": {
          "name": "punctuation.section.parens.begin.pando"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.parens.end.pando"
        }
      },
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#byte_strings"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "support.function.builtin.pando",
          "match": "\\b(print)\\b"
        },
        {
          "name": "keyword.control.pando",
          "match": "\\b(if|while|for|return)\\b"
        }
      ]
    },
    "constants": {
      "name": "constant.language.pando",
      "match": "\\b(True|False|None)\\b"
    }
  },
  "scopeName": "source.pando"
}